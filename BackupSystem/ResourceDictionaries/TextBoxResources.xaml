<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                    
                    xmlns:m="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:ap="clr-namespace:BackupSystem.Controls.Wpf.AttachedProperties;assembly=BackupSystem.Controls.Wpf">

    <Style x:Key="TxtDefault" TargetType="TextBox" BasedOn="{StaticResource MetroTextBox}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="m:TextboxHelper.ClearTextButton" Value="True"/>
    </Style>

    <Style x:Key="TxtStrong" TargetType="TextBox" BasedOn="{StaticResource TxtDefault}">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="PwdDeafult" TargetType="PasswordBox" BasedOn="{StaticResource MetroPasswordBox}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="m:TextboxHelper.ClearTextButton" Value="True"/>
        <Setter Property="m:TextboxHelper.Watermark" Value="Password"/>
        <Setter Property="ap:PasswordBoxAttached.IsPasswordTextBindable" Value="True"/>
    </Style>
    
</ResourceDictionary>